<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_base_font_size_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_base_font_size_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_base_font_size_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myschedule_current_month_tv">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 自定义dialog样式 -->
    <style name="add_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 自己想要的背景 /透明-->
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
    </style>

</resources>