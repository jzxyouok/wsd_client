<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_xiaoxi_messageID"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="#000000"
        android:textSize="20sp" />

	<RelativeLayout 
	    android:id="@+id/rl_xiaoxi_info"
	    android:layout_width="0dp"
	    android:layout_height="52dp"
	    android:layout_weight="8"
	    android:layout_marginLeft="5dp"
	    >
	    <TextView 
	        android:id="@+id/tv_xiaoxi_messageInfo"
	        android:layout_width="match_parent"
	        android:layout_height="36dp"
	        android:textColor="#000000"
	        android:text="322132142142141241242432424124124124141412421413"
	        android:textSize="14sp"
	        android:gravity="center_vertical"
	        android:padding="1dp"
	        />
	    <TextView 
	        android:id="@+id/tv_xiaoxi_inputDate"
	        android:layout_width="match_parent"
	        android:layout_height="16dp"
	        android:text="2016-12-12  12:12:12"
	        android:textColor="#232323"
	        android:textSize="12sp"
	        android:layout_below="@+id/tv_xiaoxi_messageInfo"
	        android:gravity="right"
	        android:padding="1dp"
	        />
	</RelativeLayout>
	
</LinearLayout>
