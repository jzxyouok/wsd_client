<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00A0E9" >

        <com.example.wsd_client.util.CircleImageView
            android:id="@+id/iv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/contact_selector" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="威士德产品经销商"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_home_up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_home_liebiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/icon_liebiao"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="商品列表"
                android:textColor="@color/text_icon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_home_kuaisu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="15dp"
                android:drawableTop="@drawable/icon_kuaisu"
                android:gravity="center"
                android:text="闪电下单"
                android:textColor="@color/text_icon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_home_baobiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="15dp"
                android:drawableTop="@drawable/icon_baobiao"
                android:gravity="center"
                android:text="资金报表"
                android:textColor="@color/text_icon"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_home_dingdan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/icon_dingdan"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="订单中心"
                android:textColor="@color/text_icon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_home_zhangdan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/icon_zhangdan"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="我的资金"
                android:textColor="@color/text_icon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_home_xiaoxi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/icon_xiaoxi"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="消息中心"
                android:textColor="@color/text_icon"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>